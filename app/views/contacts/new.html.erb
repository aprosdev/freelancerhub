<div class="container" style="padding-top:90px">
	<%= simple_form_for @contact, html: { class: '' }, url: contacts_path do |f| %>
	<div class="row">
		<div class="col-sm-4">
			<h3>Talk To Us !</h3>
			<hr>
			<address>
				<div style="font-size: 20px; font-weight: 600">	
				<p>FreelanceHub Careers</p>
				<p>Montreal</p>
				</div> 
				<strong>Email:</strong> <a href="mailto:#"> contact@freelancehub.com</a><br><br>
				<strong></strong>

			</address>
		</div>
		<div class="col-sm-8 contact-form">
			<form id="contact" method="post" class="form" role="form">
				<div class="row">
					<div class="col-xs-6 col-md-6 form-group">
						<%= f.input :name, required: true %>	
					</div>
					<div class="col-xs-6 col-md-6 form-group">
						<%= f.input :email, required: true %>
    				</div>
				</div>
					<%= f.input :content, as: :text, required: false, input_html: { rows: 10 }, hint: 'Max 2000 characters' %>
    			<br/>
				<div class="row">
					<div class="col-xs-12 col-md-12 form-group">
						<%= f.button :submit, 'Send message', class: 'pull-right btn btn-primary' %>
			</form>
		</div>
	</div>
	<% end %>
</div>
