
<div class="col-md-12">
    <div class="row">
      <div class="card">
           <div class="header">
            <h4 class="title">Coupons
              <div class="pull-right"> <%= link_to 'New Coupon', new_coupon_path , class: 'btn btn-round btn-fill btn-primary' %></div>
            </h4>

           </div>
            <div class="content">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Coupon type</th>
                      <th>No. Of Coupons</th>
                      <th>Status</th>
                      <th colspan="3">Actions</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @coupons.each do |coupon| %>
                      <tr>
                        <td><%= coupon.name %></td>
                        <td><%= coupon.description %></td>
                        <td><%= coupon.coupon_type %></td>
                        <td><%= coupon.max_limit %></td>
                        <td><%= coupon.status %></td>
                        <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
                        <% unless coupon.user_coupons.any? %>
                          <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
         </div>
    </div>
 </div>