<% flash.each do |key, value| %>
  <script type="text/javascript">
      var key = '<%= key %>';
      var value = '<%= value %>';
      $(document).ready(function() { flash.flashNotification('top','right',key, value) });
  </script>
<% end %>
<script>

flash = {
	flashNotification: function(from, align, key, message){
    	color = Math.floor((Math.random() * 4) + 1);
        var key_type = "success";
        if(key == 'error')
           key_type = "danger";

    	$.notify({
        	message: message

        },{
            type: key_type,
            timer: 4000,
            placement: {
                from: from,
                align: align
            }
        });
    	}
    }
</script>