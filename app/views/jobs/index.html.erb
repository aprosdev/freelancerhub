              <input id="cb58" name="by_diploma" type="checkbox" value="Associate"> <label for="cb58"><%if params[:language] == "french" %>Diplôme d'associé <%else %> Associates Degree <%end %></label><br>
              <input id="cb57" name="by_diploma" type="checkbox" value="High School"> <label for="cb57"><%if params[:language] == "french" %>École Secondaire <%else %> High School <%end %></label><br>
              <input id="cb59" name="by_diploma" type="checkbox" value="Attestation of College Studies"> <label for="cb59"><%if params[:language] == "french" %> Attestation d'études collégiales (AEC) <%else %>Attestation of College Studies (AEC) <%end %></label><br>
            </div>
            <div class="form-group col-md-12">
              <h6>
                Pay Criteria
              </h6>
              <input id="cb13" name="by_pay" type="checkbox" value=""> <label for="cb13"><%if session[:language] == "french" %> Tout<%else %> Any <%end %></label><br>
              <input id="cb14" name="by_pay" type="checkbox" value="Paid"><label for="cb14"><%if session[:language] == "french" %> Rémunéré<%else %> Paid <%end %></label><br>
              <input id="cb16" name="by_pay" type="checkbox" value="Unpaid"> <label for="cb16"><%if session[:language] == "french" %>Non-Rémunéré <%else %> Unpaid<%end %></label><br>
              <input id="cb15" name="by_pay" type="checkbox" value="To be discussed"> <label for="cb15"><%if session[:language] == "french" %>À discuter <%else %> To be discussed <%end %></label><br>
            </div>
            <div class="button-group">
              <div class="action-buttons">
                <input type="submit" class="btn btn-primary btn-sm btn-round btn-search" style="background:#67B26F; border:none;">
              </div>
            </div>
          </form>
        </div>
				<div class="col-md-9">
					<%= render @employers %>
				</div>
			</div>
			<nav class="text-center">
				<%= will_paginate @employers %>
			</nav>
		</div>
	</section>
</main>

<%= render 'layouts/footer' %>