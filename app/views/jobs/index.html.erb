<header class="page-header bg-img">
	<div class="container page-name">
		<h2 class="text-center">
			<%if session[:language] == "french" %>Recherche Emploi<%else %>Browse Jobs<%end %>
		</h2>
	</div>
	<div class="col-md-8 col-md-offset-2" style="float:none!important">
		<div class="row">
			<%= search_form_for @query do |f| %>
			<div class="inner-addon right-addon enjoy-cssx">
				<i class="fa fa-search"></i> <%= f.search_field :title_or_name_or_city_cont, placeholder: "Search by job title or company or city", class: "form-control enjoy-css" %>
			</div>
			<%end %>
		</div>
	</div>
</header>
